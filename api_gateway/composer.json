{
    "name": "yourvendor/api-gateway",
    "description": "API Gateway for Microservices Example",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "monolog/monolog": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "App\\Gateway\\": "src/"
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:80 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}