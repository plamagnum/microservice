{
    "name": "yourvendor/product-service",
    "description": "Product Service for Microservices Example",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "monolog/monolog": "^3.5",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "App\\ProductService\\": "src/"
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:80 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}